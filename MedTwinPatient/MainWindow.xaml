<Window x:Class="MedTwinPatient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedTwinPatient"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <TabControl>
        <TabItem Header="Patients">
            <Grid Background="#FFE5E5E5">
                <ListBox x:Name="listBoxData" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,840,0" SelectionChanged="listBoxData_SelectionChanged"/>
                <Label Content="Фамилия: " HorizontalAlignment="Left" Margin="159,10,0,0" VerticalAlignment="Top" FontSize="20"/>
                <Label Content="Имя: " HorizontalAlignment="Left" Margin="159,52,0,0" VerticalAlignment="Top" FontSize="20"/>
                <Label Content="Отчество: " HorizontalAlignment="Left" Margin="159,94,0,0" VerticalAlignment="Top" FontSize="20"/>
                <Label Content="Дата рождения: " HorizontalAlignment="Left" Margin="159,136,0,0" VerticalAlignment="Top" FontSize="20"/>
                <Label Content="Возраст:" HorizontalAlignment="Left" Margin="159,178,0,0" VerticalAlignment="Top" FontSize="20"/>
                <Label Content="Рост:" HorizontalAlignment="Left" Margin="159,220,0,0" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.804,2.325"/>
                <Label Content="Вес:" HorizontalAlignment="Left" Margin="159,262,0,0" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.804,2.325"/>
                <Label x:Name="surname" Content="Фамилия: " HorizontalAlignment="Left" Margin="266,10,0,0" VerticalAlignment="Top" FontSize="20"/>
                <Label x:Name="name" Content="Имя: " HorizontalAlignment="Left" Margin="266,52,0,0" VerticalAlignment="Top" FontSize="20"/>
                <Label x:Name="lastName" Content="Отчество: " HorizontalAlignment="Left" Margin="266,94,0,0" VerticalAlignment="Top" FontSize="20"/>
                <Label x:Name="birthday" Content="Дата рождения: " HorizontalAlignment="Left" Margin="325,136,0,0" VerticalAlignment="Top" FontSize="20"/>
                <Label x:Name="age" Content="Возраст:" HorizontalAlignment="Left" Margin="250,178,0,0" VerticalAlignment="Top" FontSize="20"/>
                <Label x:Name="height" Content="Рост:" HorizontalAlignment="Left" Margin="250,220,0,0" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.804,2.325"/>
                <Label x:Name="weight" Content="Вес:" HorizontalAlignment="Left" Margin="250,262,0,0" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.804,2.325"/>
            </Grid>
        </TabItem>
        <TabItem Header="Consultations">
            <Grid Background="#FFE5E5E5"/>
        </TabItem>
    </TabControl>
</Window>
